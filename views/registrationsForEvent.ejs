<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container">
    <div class="mb-4">
        <a href="/events/list-admin" class="text-decoration-none">&larr; Quay lại danh sách sự kiện</a>
        <h1 class="mt-2">Danh sách đăng ký cho sự kiện:</h1>
        <h2 class="text-primary"><%= event.name %></h2>
    </div>
    

    <% if (registrations.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Tên sinh viên</th>
                        <th>Ngày đăng ký</th>
                    </tr>
                </thead>
                <tbody>
                    <% registrations.forEach(reg => { %>
                        <tr>
                            <td><%= reg.studentId.username %></td>
                            <td><%= new Date(reg.registrationDate).toLocaleString('vi-VN') %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-info">Chưa có sinh viên nào đăng ký sự kiện này.</div>
    <% } %>
</div>

<%- include('partials/footer') %>